{
  "version": 3,
  "configurePresets": [
    {
      "name": "_base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}"
    },
    {
      "name": "_clang_x86",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "$env{VSINSTALLDIR}",
        "rhs": ""
      },
      "generator": "Ninja",
      "toolchainFile": "common_cmake/clang-x86.cmake"
    },
    {
      "name": "_clang_x64",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "$env{VSINSTALLDIR}",
        "rhs": ""
      },
      "generator": "Ninja",
      "toolchainFile": "common_cmake/clang-x64.cmake"
    },
    {
      "name": "_clang_cross_x86",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "common_cmake/clang-cross-x86.cmake"
    },
    {
      "name": "_clang_cross_x64",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "common_cmake/clang-cross-x64.cmake"
    },
    {
      "name": "_mingw_x86",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "common_cmake/i686-w64-mingw32.cmake"
    },
    {
      "name": "_mingw_x64",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "common_cmake/x86_64-w64-mingw32.cmake"
    },
    {
      "name": "_msvc_x86",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "Win32",
        "strategy": "external"
      },
      "toolchainFile": "common_cmake/clang-x86.cmake"
    },
    {
      "name": "_msvc_x64",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolchainFile": "common_cmake/msvc.cmake"
    },
    {
      "name": "_debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "_release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-x86-debug",
      "displayName": "x86 Debug (Clang)",
      "inherits": [
        "_base",
        "_clang_x86",
        "_debug"
      ]
    },
    {
      "name": "clang-x86-release",
      "displayName": "x86 Release (Clang)",
      "inherits": [
        "_base",
        "_clang_x86",
        "_release"
      ]
    },
    {
      "name": "clang-x64-debug",
      "displayName": "x64 Debug (Clang)",
      "inherits": [
        "_base",
        "_clang_x64",
        "_debug"
      ]
    },
    {
      "name": "clang-x64-release",
      "displayName": "x64 Release (Clang)",
      "inherits": [
        "_base",
        "_clang_x64",
        "_release"
      ]
    },
    {
      "name": "clang-cross-x86-debug",
      "displayName": "x86 Debug (Clang Cross Compiler)",
      "inherits": [
        "_base",
        "_clang_cross_x86",
        "_debug"
      ]
    },
    {
      "name": "clang-cross-x86-release",
      "displayName": "x86 Release (Clang Cross Compiler)",
      "inherits": [
        "_base",
        "_clang_cross_x86",
        "_release"
      ]
    },
    {
      "name": "clang-cross-x64-debug",
      "displayName": "x64 Debug (Clang Cross Compiler)",
      "inherits": [
        "_base",
        "_clang_cross_x64",
        "_debug"
      ]
    },
    {
      "name": "clang-cross-x64-release",
      "displayName": "x64 Release (Clang Cross Compiler)",
      "inherits": [
        "_base",
        "_clang_cross_x64",
        "_release"
      ]
    },
    {
      "name": "mingw-x86-debug",
      "displayName": "x86 Debug (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x86",
        "_debug"
      ]
    },
    {
      "name": "mingw-x86-release",
      "displayName": "x86 Release (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x86",
        "_release"
      ]
    },
    {
      "name": "mingw-x64-debug",
      "displayName": "x64 Debug (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x64",
        "_debug"
      ]
    },
    {
      "name": "mingw-x64-release",
      "displayName": "x64 Release (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x64",
        "_release"
      ]
    },
    {
      "name": "msvc-x86-debug",
      "displayName": "x86 Debug (MSVC)",
      "inherits": [
        "_base",
        "_msvc_x86",
        "_debug"
      ]
    },
    {
      "name": "msvc-x86-release",
      "displayName": "x86 Release (MSVC)",
      "inherits": [
        "_base",
        "_msvc_x86",
        "_release"
      ]
    },
    {
      "name": "msvc-x64-debug",
      "displayName": "x64 Debug (MSVC)",
      "inherits": [
        "_base",
        "_msvc_x64",
        "_debug"
      ]
    },
    {
      "name": "msvc-x64-release",
      "displayName": "x64 Release (MSVC)",
      "inherits": [
        "_base",
        "_msvc_x64",
        "_release"
      ]
    }
  ]
}
